{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Zhaohuan-Guo/vega-lite-Co2/main/updated_data.csv",
    "format": { "type": "csv" }
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "layer": [
            {
              "mark": {
                "type": "geoshape",
                "fill": "white",
                "stroke": "#000",
                "strokeWidth": 1,
                "strokeOpacity": 0.5
              },
              "data": {
                "url": "https://raw.githubusercontent.com/brechtv/looker_map_layers/master/world-countries-sans-antarctica.json",
                "format": { "type": "topojson", "feature": "countries1" }
              }
            },
            {
              "mark": {
                "type": "geoshape",
                "stroke": "#000000",
                "strokeWidth": 0.5
              },
              "data": {
                "url": "https://raw.githubusercontent.com/brechtv/looker_map_layers/master/world-countries-sans-antarctica.json",
                "format": { "type": "topojson", "feature": "countries1" }
              },
              "transform": [
                {
                  "lookup": "properties.name",
                  "from": {
                    "data": {
                      "url": "https://raw.githubusercontent.com/Zhaohuan-Guo/vega-lite-Co2/main/updated_data.csv"
                    },
                    "key": "country",
                    "fields": [
                      "co2_emission_all",
                      "co2_emission",
                      "co2_emission_category",
                      "co2_emission_animal",
                      "co2_emission_non_animals"
                    ]
                  }
                },
                {"filter": "datum.co2_emission_all > 0"}
              ],
              "encoding": {
                "color": { "field": "co2_emission_all", "type": "quantitative" },
                "tooltip": [
                  { "field": "properties.name", "type": "nominal", "title": "country" },
                  { "field": "co2_emission_all", "type": "nominal", "title": "CO2 emission" },
                  {
                    "field": "co2_emission_animal",
                    "type": "nominal",
                    "title": "Animal Product CO2 emission"
                  },
                  {
                    "field": "co2_emission_non_animals",
                    "type": "nominal",
                    "title": "Non-Animal ProductCO2 emission"
                  }
                ]
              }
            }
          ],
          "projection": { "type": "equirectangular" },
          "width": 500,
          "height": 200
        },
        {
          "mark": "arc",
          "transform": [
            {"filter": "datum.co2_emission_range !== null && datum.co2_emission_range !== ''"} 
          ],
          "encoding": {
            "theta": {
              "title": "number of country",
              "aggregate": "count",
              "field": "country",
              "type": "quantitative"
            },
            "color": {
              "field": "co2_emission_range",
              "type": "nominal",
              "scale": { "range": ["#ecf8bc", "#85cfbb", "#2f9ebf", "#2c3e81"] }
            },
            "tooltip": [
              {
                "title": "number of country",
                "aggregate": "count",
                "field": "country",
                "type": "quantitative",
                "format": ""
              }
            ]
          }
        }
      ]
    },
    {"width": 950,
    "height": 180,
      "mark": "bar",
      "transform": [
        {"filter": "datum.co2_emission_all > 1000"}
      ],
      "encoding": {
        "y": {"field": "co2_emission_all", "type": "quantitative", "title": "CO2 Emission All"},
        "x": {"field": "country", "type": "nominal", "title": "Country","sort": {"op": "sum", "field": "co2_emission_all","order": "descending"}},
        "tooltip": [
          { "field": "country", "type": "nominal", "title": "country(abbr)" },
          { "field": "co2_emission_all", "type": "nominal", "title": "CO2 emission" },
          {
            "field": "co2_emission_animal",
            "type": "nominal",
            "title": "Animal Product CO2 emission"
          },
          {
            "field": "co2_emission_non_animals",
            "type": "nominal",
            "title": "Non-Animal Product CO2 emission"
          }

        ]

      }
    }
  ]
}
